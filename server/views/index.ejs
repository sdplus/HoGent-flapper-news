<html>
  <head>
    <title>Flapper News</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjavascripts/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

    <script src="javascripts/angularApp.js"></script>


    <!-- controllers -->

    <script src="javascripts/posts/posts.controller.js"></script>
    <script src="javascripts/comments/comments.controller.js"></script>
    <script src="javascripts/auth/auth.controller.js"></script>
    <script src="javascripts/nav/nav.controller.js"></script>

    <!-- services -->

    <script src="javascripts/posts/posts.service.js"></script>
    <script src="javascripts/comments/comments.service.js"></script>
    <script src="javascripts/auth/auth.service.js"></script>


    <style> .glyphicon-thumbs-up {cursor: pointer}</style>
  </head>
  <body ng-app="flapperNews">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a> {{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>



  </body>

</html>
